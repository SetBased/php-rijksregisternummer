{
  "name": "setbased/rijksregisternummer",
  "description": "Library for handling identification numbers of the National Register of Belgium (a.k.a. Rijksregisternummer)",
  "keywords": [
    "Rijksregisternummer",
    "bisnummer",
    "bis-nummer",
    "BIS"
  ],
  "license": "MIT",
  "require": {
    "php": ">=8.3",
    "setbased/exception": "^2.6.0"
  },
  "require-dev": {
    "phing/phing": "^3.0.1",
    "phpunit/phpunit": "^11.5.22"
  },
  "autoload": {
    "psr-4": {
      "SetBased\\Rijksregisternummer\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SetBased\\Rijksregisternummer\\Test\\": "test/"
    }
  },
  "config": {
    "bin-dir": "bin/",
    "sort-packages": true,
    "allow-plugins": {
      "phing/phing-composer-configurator": true
    }
  }
}
